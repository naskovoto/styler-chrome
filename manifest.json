{
  "manifest_version": 3,
	"name": "Styler",
	"version": "6.0.0",
	"description": "Add custom CSS styles, JavaScript & jQuery to any websites",
	"action": {
		"default_icon": "32.png",
		"default_popup": "popup.html",
    "default_title": "Styler"
	},

  "background": {
    "service_worker": "background.js"
  },

	"permissions": [
    "scripting",
		"activeTab",
		"storage",
		"declarativeNetRequest"
	],
	"host_permissions": [
    "<all_urls>"
  ],
	"icons": { "16": "16.png", "32": "32.png", "48": "48.png", "128": "128.png" }
}